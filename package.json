{
  "name": "switch-gulp-to-webpack",
  "version": "1.0.0",
  "author": "Adam Pałaszyński",
  "description": "Switch from Gulp to Webpack",
  "scripts": {
    "dev-server": "npm run build:dev && webpack-dev-server --mode development",
    "build:dev": "rm -rf ./public && webpack --mode development",
    "build:prod": "rm -rf ./public && webpack -p --env production --mode production"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack-plugin": "^2.0.1",
    "css-loader": "^0.28.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "github:webpack-contrib/html-webpack-plugin",
    "img-loader": "^2.0.1",
    "node-sass": "^4.8.1",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-loader": "^2.1.1",
    "resolve-url": "^0.2.1",
    "sass-loader": "^6.0.7",
    "svg-sprite-loader": "^3.7.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1"
  }
}
